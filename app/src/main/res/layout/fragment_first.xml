<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".FirstFragment">

    <TextView
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="20dp"
        android:id="@+id/textview_first"
        android:text="Water  Content"
        android:textSize="20dp"
        android:background="@drawable/rounded_rect1"
        android:paddingRight="3dp"
        android:paddingLeft="20dp"
        android:paddingTop="3dp"
        android:elevation="10dp"
        android:textStyle="bold"
        android:textColor="#002966" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="210dp"
        android:id="@+id/textview_2nd"
        android:text="Check Weather"
        android:textSize="20sp"
        android:background="@drawable/rounded_rect2"
        android:paddingRight="3dp"
        android:paddingLeft="27dp"
        android:paddingTop="3dp"
        android:elevation="10dp"
        android:textStyle="bold"
        android:textColor="#4d4d00" />


    <Button
        android:id="@+id/button_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_first" />
    <Button
        android:id="@+id/button_second"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="20dp"
        android:text="@string/Alert"
        android:textSize="20sp"
        android:background="@drawable/round_rect3"
        android:layout_below="@+id/textview_2nd"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>